/* pages/components/plate/plate.wxss */

.plate {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.plate-content {
  background-color: white;
  width: 75%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
  padding:32rpx;
  font-size: 30rpx;
}

.flex-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #efefef;
}
.flex-row-two{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content:center;
}
.flex-between {
  justify-content: space-between;
}
.title{
  color: #999;
}
.img-one {
  width: 30rpx;
  height: 30rpx;
}
.img-two{
  width: 34rpx;
  height: 34rpx;
}
.num-item{
  width: 13%;
  background-color: #2987f9;
  margin-bottom: 8rpx;
  margin-right:8rpx;
  line-height:70rpx;
  height: 70rpx;
  font-size: 30rpx;
  text-align: center;
    color: white;
    border-radius: 4rpx;
}
/* .num-item:active{
  background-color: #00a0e9;
  color: white;
} */
.btn{
  margin:32rpx 0;
}
.btn button{
  font-size:30rpx;
}
.btn .active{
    background-color: #2987f9;
  color: white;
}
.city,.letter{
  position: relative;
}
.mt-32{
  margin-top: 32rpx;
}
.select-modal,.select-letter{
  position: absolute;
  top: 64rpx;
  left: 0;
  width: 100%;
  background-color: white;
  box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.1);
  border-radius: 5rpx;
  height: 350rpx;
  overflow: auto;
  z-index: 999;
  padding: 0 32rpx;
  box-sizing: border-box;
  animation: show .3s ease;
  display: none;
}
.select-letter{
  height: 272rpx;
}
.select-item{
  padding: 10rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
}
.select-active .select-modal,.select-active .select-letter{
  display: block;
}
.keyboard{
  color: #2987f9;
  margin-top: 16rpx;
  display: flex;
}
.keyboard text{
  margin-right: 16rpx;
}
/* .select-item:active{
  background-color: #efefef;
} */
@keyframes show{
  0%{
    opacity: 0;
    margin-top: -40rpx;
  }
  100%{
    opacity: 1;
    margin-top: 0rpx;

  }
}