/* components/protocol/protocol.wxss */
.posi-protocol{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 999;
}
.protocol-body{
  position: absolute;
  top: 120rpx;
  left: 50rpx;
  right: 50rpx;
  bottom: 170rpx;
  background-color: white;
  border-radius: 0.25rem;
  padding: 20rpx;
  box-sizing: border-box;
}
.body-title{
  text-align: center;
  margin-bottom: 20rpx;
}
.body-content{
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  height: 82%;
  overflow: auto;
}
.protocol-btn{
  display: flex;
  margin-top:20rpx;
  justify-content: center;
}
.protocol-btn button{
  margin:0rpx 50rpx;
  width: auto;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 1;
  min-height: auto;
}
.close{
  color:#666;
}
.confirm{
  color: rgba(41,135,249,1);
}